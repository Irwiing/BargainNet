@model IEnumerable<BargainNet.Core.Entities.Offer>
@{ 
    Layout = "";
}
@if (Model == null)
{
    <div><p>Nenhum lance foi dado</p></div>
}
else
{
    @foreach (var item in Model.OrderByDescending(item => item.Value))
    {
<dl class="row col-12">
    <dt class="col-sm-2">
        <p>@item.User.UserName:</p>
    </dt>
    <dd class="col-sm-10">
        <p>R$@item.Value</p>
    </dd>
    
    
</dl>
    }
}
