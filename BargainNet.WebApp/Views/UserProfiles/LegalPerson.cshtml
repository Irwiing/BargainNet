@model BargainNet.Core.Entities.UserProfile

<h4>LegalPerson</h4>
<hr />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="LegalPerson.CompanyName" class="control-label"></label>
    <input asp-for="LegalPerson.CompanyName" class="form-control" />
    <span asp-validation-for="LegalPerson.CompanyName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LegalPerson.TradeName" class="control-label"></label>
    <input asp-for="LegalPerson.TradeName" class="form-control" />
    <span asp-validation-for="LegalPerson.TradeName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LegalPerson.DocumentPic" class="control-label"></label>
    <input type="file" accept=".pdf" name="documentPic" class="form-control-file" />
    <span asp-validation-for="LegalPerson.DocumentPic" class="text-danger"></span>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
